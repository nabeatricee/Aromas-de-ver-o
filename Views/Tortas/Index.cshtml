@model IEnumerable<App.Models.Produto>

@{
    ViewData["Title"] = "Tortas";
}
<div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/img/capator.png" class="d-block w-100" alt="">
        </div>
    </div>
<div class="gabriela"></div>

<div class="row">
    @foreach (var item in Model) if (item.IdCategoria == 4)
        {

            <div class="col-12 col-lg-3 mt-1 mb-3">
                <div class="card ">
                    <img class="card-img-top " src="~/img/@Html.DisplayFor(modelItem => item.Foto)" alt="Imagem de capa do card">
                    <div class="card-body text-center">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Nome)</h5>
                        <p class="card-text">@Html.DisplayFor(modelItem => item.Descricao)</p>
                        <a href="#" class="btn btn-dark bianca" data-bs-toggle="modal" data-bs-target="#_@item.IdProduto">Mais informações</a>
                        </div>
                    </div>
                </div>
                <div class="modal fade" id="_@item.IdProduto">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content louise">
                        <div class="modal-header">
                            <h5 class="thay">@Html.DisplayFor(modelItem => item.Nome)</h5>
                            <button class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <img class="img-fluid maristela" src="~/img/@Html.DisplayFor(modelItem => item.Foto)">
                            <p class="mirelli">@Html.DisplayFor(modelItem => item.Descricao)</p>
                            <h1 class="michelly"> R$ @Html.DisplayFor(modelItem => item.Valor)</h1>
                        </div>
                        <div class="modal-footer">
                            <button class="btn btn-dark bianca" data-bs-dismiss="modal">Adicionar ao carrinho</button>
                        </div>
                    </div>
                </div>
            </div>
        }
</div>