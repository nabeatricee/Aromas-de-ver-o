@model IEnumerable<App.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}

<h1>LISTA DE ADM'S</h1>

<p>
    <a asp-action="Create" class="text-dark">Novo Admin.</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Login)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Senha)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Imagem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Login)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Senha)
            </td>
            <td>
                <a class="btn bia" asp-action="Edit" asp-route-id="@item.UsuarioId">Edit</a> |
                <a class="btn bia" asp-action="Details" asp-route-id="@item.UsuarioId">Details</a> |
                <a class="btn bia" asp-action="Delete" asp-route-id="@item.UsuarioId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
